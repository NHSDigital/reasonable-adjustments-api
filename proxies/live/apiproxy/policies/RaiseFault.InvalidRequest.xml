<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.InvalidRequest">
    <DisplayName>RaiseFault.InvalidRequest</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="text/plain"/>
            <StatusCode>{validation.statusCode}</StatusCode>
            <ReasonPhrase>{validation.reasonPhrase}</ReasonPhrase>
        </Set>
        <AssignVariable>
            <Name>ra.error.code</Name>
            <Value>request</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.code</Name>
            <Value>INVALID_REQUEST</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.display</Name>
            <Template>{validation.errorMessage}</Template>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.diagnostics</Name>
            <Template>{validation.errorDescription}</Template>
        </AssignVariable>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>