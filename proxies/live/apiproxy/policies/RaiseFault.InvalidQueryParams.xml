<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.InvalidQueryParams">
    <DisplayName>RaiseFault.InvalidQueryParams</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Payload contentType="application/json">
            {
                "error": "invalid query parameters",
                "error_description": "required query parameters are missing or have empty values",
                "message_id": "{messageid}"
            }    
            </Payload>
            <StatusCode>404</StatusCode>
            <ReasonPhrase>Resource Not Found</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>