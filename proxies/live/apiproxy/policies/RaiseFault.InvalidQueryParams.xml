<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.InvalidQueryParams">
    <DisplayName>RaiseFault.InvalidQueryParams</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="text/plain"/>
            <StatusCode>404</StatusCode>
            <ReasonPhrase>invalid query parameters</ReasonPhrase>
        </Set>
        <AssignVariable>
            <Name>ra.error.code</Name>
            <Value>value</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.code</Name>
            <Value>BAD_REQUEST</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.display</Name>
            <Value>Bad request</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.diagnostics</Name>
            <Value>required query parameters are missing or have empty values</Value>
        </AssignVariable>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>