<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.SharedFlowError">
    <DisplayName>AssignMessage.JWTGenerationError</DisplayName>
    <Set>
        <Payload contentType="application/json">
            {
                "error": "{error.reason.phrase}",
                "error_description": "{error.content}",
                "message_id": "{messageid}"
            }    
            </Payload>
        <StatusCode>400</StatusCode>
        <ReasonPhrase>{error.reason.phrase}</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>
