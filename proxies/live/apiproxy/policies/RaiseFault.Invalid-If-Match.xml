<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.Invalid-If-Match">
    <DisplayName>RaiseFault.Invalid-If-Match</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="text/plain"/>
            <StatusCode>400</StatusCode>
            <ReasonPhrase>Bad Request</ReasonPhrase>
        </Set>
        <AssignVariable>
            <Name>ra.error.code</Name>
            <Value>header</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.code</Name>
            <Value>BAD_REQUEST</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.coding.display</Name>
            <Value>invalid header</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ra.error.diagnostics</Name>
            <Value>if-match is missing or invalid</Value>
        </AssignVariable>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
